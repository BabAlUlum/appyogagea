{% extends 'base.html.twig' %}

{% block title %}Hello TestController!{% endblock %}

{% block body %}

<div class="salt8">

    <div class="contact mt-3 col-sm-12 d-flex row">
        <div class="col-sm-6 mt-3">

            <div class="form-group" id="formcontact" class="mt-3">
                {{ form_start(form) }}

                    <div class="">
                        {{ form_row(form.nome) }}
                    </div>
                    <div class="row">
                        <div class="col">
                            {{ form_row(form.email) }}
                        </div>
                        <div class="col">
                            {{ form_row(form.cellulare) }}
                        </div>
                    </div>
                    <div class="row">
                        <div class="col">
                            {{ form_row(form.object) }}
                        </div>
                    </div>
                    
                    <div class="row">
                        <div class="col">
                            {{ form_row(form.message) }}
                        </div>
                    </div>
                    
                    <button class="btn" type="submit"> Send </button>
                {{ form_end(form) }}
            </div>

        </div>
    </div>

</div>
{% endblock %}
